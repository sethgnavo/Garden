<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_cultivation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.spaceapps.garden.activities.CultivationActivity"
    tools:showIn="@layout/activity_cultivation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/tomate_illustration"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tomate"
                android:textColor="@color/md_red_900"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau facile"
                android:textColor="@color/md_grey_800"/>
        </LinearLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingEnd="@dimen/basin_gridhorizontal_padding"
            android:paddingLeft="@dimen/basin_gridhorizontal_padding"
            android:paddingRight="@dimen/basin_gridhorizontal_padding"
            android:paddingStart="@dimen/basin_gridhorizontal_padding"
            app:columnCount="2"
            app:useDefaultMargins="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apport en eau"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fish_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,25L"
                android:textColor="@color/md_grey_800"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Besoin en lumière"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fish_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="100%"
                android:textColor="@color/md_grey_800"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Première récolte"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Après 90 jours"
                android:textColor="@color/md_grey_800"
                android:textSize="18sp"/>

        </android.support.v7.widget.GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:gravity="center"
            android:text="Pépinière"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="La pépinière consiste en la préparation du sol, au semis, à l'arrosage et à l'entretien
            \n"
            android:textColor="@color/md_grey_900"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:gravity="center"
            android:text="Plantation"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="La plantation consiste à la préparation du sol de repiquage, au repiquage, au semis, à l’arrosage et à l’entretien.
-	Précautions
Repiquer les plants vigoureux avec la motte de terre autour des racines
Faire le repiquage  de préférence le soir
Jeter les plants petits et rabougris
Ne pas trop enfoncer les plants dans le sol
Bien tasser la terre autour des racines
Installer les tuteurs (de 50 cm à 150 cm selon les variétés) au moment de la plantation pour ne pas risquer de blesser les racines par la suite.
Planter le tuteur à environ 10 cm du pied de tomate.
-	Durée : 07 jours"
            android:textColor="@color/md_grey_900"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/accent"
            android:gravity="center"
            android:text="FUMURE ET ENTRETIEN"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="La fumure se fait avec un apport de fumier ou de compost décomposé à la préparation du terrain.
-	Précautions
Faire des apports réguliers, tous les 15 jours,  d'engrais organique pendant toute la période de croissance.
-	Durée : 43 jours
Les premières récoltes interviennent entre 80 et 90 jours après repiquage et peuvent
s’étaler sur 1 à 2 mois suivant les variétés"
            android:textColor="@color/md_grey_900"
            android:textSize="16sp"/>
    </LinearLayout>

</ScrollView>
